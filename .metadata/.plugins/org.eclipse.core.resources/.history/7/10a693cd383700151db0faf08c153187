package common.copy;

import java.util.Map;

import android.app.Activity;
import android.content.Context;

public interface IGyyxSdkAdapter {

		/**
		 * 初始化
		 * @param config
		 * @param activity
		 * @param listener
		 */
	  	public  void initGYApp(GyyxConfigParameters config,
	  			Activity activity, GyyxListener listener) ;
	  	
	  	/**
	  	 * 登陆
	  	 * @param config
	  	 * @param listener
	  	 * @param context
	  	 */
	  	public  void loginGYApp(GyyxConfigParameters config,
	  			GyyxListener listener,Context context) ;
	  
	  	/**
	  	 * 快速登陆
	  	 * @param config
	  	 * @param listener
	  	 * @param context
	  	 */
	  	public  void loginFastGYApp(GyyxConfigParameters config,
	  			GyyxListener listener,Context context) ;
	  
	  	/**
	  	 * 注销
	  	 * @param config
	  	 * @param listener
	  	 * @param context
	  	 */
	  	public  void logoutGYApp(GyyxConfigParameters config,
	  			 GyyxListener listener,Context context);
	  
	  
	  	/**
	  	 * 显示用户中心
	  	 * @param context1
	  	 * @param listener
	  	 */
	  	public  void showUserCenterGYApp(Context context1, GyyxListener listener);
	  
	  	/**
	  	 * 充值
	  	 * @param config
	  	 * @param item
	  	 * @param price
	  	 * @param count
	  	 * @param order
	  	 * @param url
	  	 * @param obligate
	  	 * @param activity
	  	 * @param listener
	  	 */
	  	public  void rechargeGYApp( GyyxConfigParameters config,
	  			 String item,  double price,  int count,
	  			 String order,  String url, Map obligate,
	  			 Activity activity,  GyyxListener listener);

}
