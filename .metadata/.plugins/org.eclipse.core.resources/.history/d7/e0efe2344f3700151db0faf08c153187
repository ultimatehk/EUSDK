/**
 * 为Extract层提供接口
 * @author huangke
 */
package cn.eugames.extension.common;

import java.util.Map;

import android.app.Activity;
import android.content.Context;

public interface IGyyxSdkAdapter {

		/**
		 * 初始化
		 * @param config
		 * @param activity
		 * @param listener
		 */
	  	public  void initGYApp(EUSDKConfigParameters config,
	  			Activity activity, EUSDKListener listener) ;
	  	
	  	/**
	  	 * 登陆
	  	 * @param config
	  	 * @param listener
	  	 * @param context
	  	 */
	  	public  void loginGYApp(EUSDKConfigParameters config,
	  			EUSDKListener listener,Context context) ;
	  
	  	/**
	  	 * 快速登陆
	  	 * @param config
	  	 * @param listener
	  	 * @param context
	  	 */
	  	public  void loginFastGYApp(EUSDKConfigParameters config,
	  			EUSDKListener listener,Context context) ;
	  
	  	/**
	  	 * 注销
	  	 * @param config
	  	 * @param listener
	  	 * @param context
	  	 */
	  	public  void logoutGYApp(EUSDKConfigParameters config,
	  			EUSDKListener listener,Context context);
	  
	  
	  	/**
	  	 * 显示用户中心
	  	 * @param context1
	  	 * @param listener
	  	 */
	  	public  void showUserCenterGYApp(Context context1, EUSDKListener listener);
	  
	  	/**
	  	 * 充值
	  	 * @param config
	  	 * @param item
	  	 * @param price
	  	 * @param count
	  	 * @param order
	  	 * @param url
	  	 * @param obligate
	  	 * @param activity
	  	 * @param listener
	  	 */
	  	public  void rechargeGYApp( EUSDKConfigParameters config,
	  			 String item,  double price,  int count,
	  			 String order,  String url, Map obligate,
	  			 Activity activity,  EUSDKListener listener);

}
